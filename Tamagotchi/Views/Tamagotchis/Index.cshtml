@using TamagotchiFarm.Models;


<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Yeeeeep!</title>
  </head>
  <body>

    <h1>Your Tamagotchi</h1>
    <ul>
      @if (Model.Count == 0)
      {
        <p>You have no places in your to do list!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Tamagotchi tamagotchi in Model)
        {
          <li><a href='/tamagotchis/@tamagotchi.GetId()'>@tamagotchi.Name</a></li>
        }
      }


    </ul>
    <a href="/places/new">Hatch new Tamagotchi</a>
    @* <a href="/places/searchform">Search For a Location.</a> *@
    <form action="/tamagotchis/delete" method="post">
      <button class="btn btn-success" type="submit" name="button">Terminate All Tamagotchi</button>
    </form>


  </body>
</html>
